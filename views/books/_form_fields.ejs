<div class="from-row">
  <div class="from-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>" />
  </div>
  <div class="from-item">
    <label>Author</label>
    <select name="author">
      <% authors.forEach(author => { %> <% if (author.id === book.author) { %>
      <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %> </option
      ><option label="<%= author.name %>" value="<%= author.id %>">
        <% } %> <% }) %>
      </option></select
    >
  </div>
</div>

<div class="from-row">
  <div class="from-item">
    <label>Publish Date</label>
    <input
      type="date"
      name="publishDate"
      value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"
    />
  </div>
  <div class="from-item">
    <label>Page Count</label>
    <input
      type="number"
      name="pageCount"
      min="1"
      value="<%= book.pageCount %>"
    />
  </div>
</div>

<div class="from-row">
  <div class="from-item from-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="filepond" />
  </div>
  <div class="from-item">
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
  </div>
</div>
