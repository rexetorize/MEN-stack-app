<h1 class="page-header">Edit Author</h1>

<form action="/authors/<%=author.id%>?_method=PUT " method="POST">
  <div class="from-items">
    <input
      style="width: 350px; padding-bottom: 0.5rem;"
      type="text"
      name="name"
      value="<%=author.name %> "
    />
  </div>
  <div style="padding-top: 0.5rem;" class="btn-row">
    <button class="btn btn-primary" type="submit">Update</button>
    <a class="btn btn-danger" href="/authors ">cancel</a>
  </div>
</form>
